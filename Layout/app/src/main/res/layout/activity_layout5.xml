<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button A"
        android:background="#33B5E6"
        android:id="@+id/btnA"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button B"
        android:background="#99CD00"
        android:layout_below="@id/btnA"
        android:layout_toRightOf="@id/btnA"
        android:id="@+id/btnB"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button C"
        android:background="#FFBB32"
        android:layout_below="@id/btnB"
        android:layout_toRightOf="@id/btnB"
        android:id="@+id/btnC"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button D"
        android:background="#FF4445"
        android:layout_below="@id/btnC"
        android:layout_toLeftOf="@id/btnC"
        android:id="@+id/btnD"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button D"
        android:background="#9900cc"
        android:layout_below="@id/btnD"
        android:layout_toLeftOf="@id/btnD"
        android:id="@+id/btnE"/>

</RelativeLayout>