    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:background="#33B5E6"
            android:layout_weight="1"
            android:id="@+id/btn1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:background="#99CD00"
            android:layout_weight="1"
            android:id="@+id/btn2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:background="#FFBB32"
            android:layout_weight="1"
            android:id="@+id/btn3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4"
            android:background="#ccff33"
            android:layout_weight="1"
            android:id="@+id/btn4"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5"
            android:background="#cc0099"
            android:layout_weight="1"
            android:id="@+id/btn5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="6"
                android:background="#66ff66"
                android:layout_weight="1"
                android:id="@+id/btn6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:background="#9900cc"
                android:layout_weight="2"
                android:id="@+id/btn7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8"
                android:background="#ccffff"
                android:layout_weight="2"
                android:id="@+id/btn8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9"
                android:background="#ff9933"
                android:layout_weight="1"
                android:id="@+id/btn9"/>

        </LinearLayout>
    </LinearLayout>


